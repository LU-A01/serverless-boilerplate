# Deno Fullstack Boilerplate 環境設定
# このファイルには共通の設定値を定義し、Docker ComposeとCI/CDパイプラインで利用します

# 開発環境設定

# バージョン設定
DENO_VERSION=2.2.3
POSTGRES_VERSION=14-alpine
NGINX_VERSION=alpine

# データベース設定
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app_db
DB_PORT=5432
DB_HOST=db
DB_SCHEMA=app_schema

# サーバー設定
BACKEND_PORT=3000
FRONTEND_PORT=5173
API_URL=http://localhost:3000

# セキュリティ設定
JWT_SECRET=dev-secret-key
JWT_EXPIRES_IN=15m
CORS_ALLOWED_ORIGINS=http://localhost:5173

# ログ設定
LOG_LEVEL=debug

# Docker設定
COMPOSE_PROJECT_NAME=serverless-app

# Deno環境設定
DENO_ENV=development