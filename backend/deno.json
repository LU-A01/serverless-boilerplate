{
  "imports": {
    "hono": "jsr:@hono/hono@^4.7.4",
    "@/": "./src/"
  },
  "tasks": {
    "start": "deno run --allow-net main.ts",
    "dev": "deno run --allow-net --watch main.ts",
    "test": "deno test -A",
    "test:unit": "deno test -A src/domain",
    "test:integration": "deno test -A src/adapters",
    "test:e2e": "deno test -A tests/e2e",
    "coverage": "deno test -A --coverage=coverage && deno coverage coverage",
    "fmt": "deno fmt",
    "lint": "deno lint --ignore=npm:/,node_modules/,.cache/",
    "build": "deno compile -A main.ts"
  },
  "lint": {
    "include": ["src/", "tests/"],
    "exclude": ["npm:/", "node_modules/", ".cache/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "require-await", "no-restricted-syntax"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/", "*.ts"],
    "exclude": ["npm:/", "node_modules/", ".cache/"],
    "lineWidth": 80,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}