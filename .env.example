# Deno Fullstack Boilerplate 環境設定テンプレート
# このファイルをコピーして .env として保存し、必要に応じて値を変更してください

# バージョン設定
DENO_VERSION=2.2.3
POSTGRES_VERSION=14-alpine
NGINX_VERSION=alpine

# データベース設定
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app_db
DB_PORT=5432
DB_HOST=db
DB_SCHEMA=app_schema

# サーバー設定
BACKEND_PORT=3000
FRONTEND_PORT=5173
API_URL=http://localhost:3000

# セキュリティ設定
# 注意: 本番環境では必ず強力なシークレットキーに変更してください
JWT_SECRET=your-secure-secret-key
JWT_EXPIRES_IN=15m
CORS_ALLOWED_ORIGINS=http://localhost:8000,https://yourdomain.com

# ログ設定
# debug, info, warn, error のいずれかを指定
LOG_LEVEL=info

# 開発ツール設定
PGADMIN_PORT=8080
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Docker設定
COMPOSE_PROJECT_NAME=serverless-app

# Deno環境設定
DENO_ENV=development

# デプロイ設定
DENO_DEPLOY_PROJECT=your-deno-deploy-project
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-s3-bucket
AWS_CLOUDFRONT_ID=your-cloudfront-id
AWS_LAMBDA_NAME=your-lambda-name